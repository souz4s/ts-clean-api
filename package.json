{
  "name": "ts-clean-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "prettier --check",
      "jest --bail --findRelatedTests src/**/*.ts",
      "npm run lint --fix"
    ]
  },
  "scripts": {
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "build": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/souz4s/ts-clean-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/souz4s/ts-clean-api/issues"
  },
  "homepage": "https://github.com/souz4s/ts-clean-api#readme",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prisma": "^4.1.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.1.0"
  }
}
