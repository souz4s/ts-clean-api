{
  "name": "ts-clean-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "prettier --check",
      "jest --bail --findRelatedTests tests/**/*.ts",
      "npm run lint --fix"
    ]
  },
  "scripts": {
    "start": "node -r ts-node/register -r tsconfig-paths/register dist/main/server.js",
    "test": "jest --passWithNoTests --runInBand --no-cache --coverage",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "build": "tsc",
    "prepare": "husky install",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/souz4s/ts-clean-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/souz4s/ts-clean-api/issues"
  },
  "homepage": "https://github.com/souz4s/ts-clean-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.5.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prisma": "^4.2.1",
    "ts-jest": "^28.0.7",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "cors": "^2.8.5",
    "express": "^4.18.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
